<UserControl x:Class="ClienteAhorcado.Vistas.RegistrarJugadorUserControl"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ClienteAhorcado.Vistas"
    mc:Ignorable="d" Width="870" Height="476">
    <Border Background="White" CornerRadius="12" Margin="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image Source="/Images/pinzarron.jpeg" Stretch="UniformToFill" Panel.ZIndex="0" Margin="0,0,-18,0" Grid.ColumnSpan="2" Grid.RowSpan="3"/>
            <!-- Encabezado -->
            <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,10,0,20" HorizontalAlignment="Center">
                <TextBlock Foreground="White" Text="{lex:Loc Resources.crea_tu_cuenta}" FontSize="24" FontWeight="Bold"  TextAlignment="Center"/>
                <TextBlock Text="{lex:Loc Resources.ingresa_datos_cuenta}" FontSize="16" Foreground="Salmon" TextAlignment="Center"/>
            </StackPanel>
            <!-- Columna izquierda -->
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="10,10,10,44" Grid.RowSpan="2">
                <TextBlock Text="{lex:Loc Resources.nombre}" FontWeight="SemiBold" Margin="0,0,0,5" FontSize="18"/>
                <TextBox x:Name="tbNombre" Padding="10,5,10,10" Tag="{lex:Loc Resources.nombre}" />
                <TextBlock x:Name="tblockErrorNombre" Text="" FontWeight="SemiBold" Margin="0,0,0,10" FontSize="12" Foreground="Red"/>
                <TextBlock Text="{lex:Loc Resources.correo}" FontWeight="SemiBold" Margin="0,0,0,5" FontSize="18"/>
                <TextBox x:Name="tbCorreo" Padding="10" Tag="{lex:Loc Resources.correo_electronico}" />
                <TextBlock x:Name="tblockErrorCorreo" Text="" FontWeight="SemiBold" Margin="0,0,0,5" FontSize="12" Foreground="Red"/>
                <TextBlock Text="{lex:Loc Resources.fecha_nacimiento}" FontWeight="SemiBold" FontSize="18"/>
                <TextBlock x:Name="tblockErrorFecha" Text="" FontWeight="SemiBold"  FontSize="12" Foreground="Red"/>
                <DatePicker x:Name="dpFechaNacimiento" FontWeight="SemiBold" />
            </StackPanel>
            <!-- Columna derecha -->
            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
                <TextBlock Text="{lex:Loc Resources.telefono}" FontWeight="SemiBold" Margin="0,0,0,5" FontSize="18"/>
                <TextBox x:Name="tbTelefono" Padding="10,5,10,10" Tag="{lex:Loc Resources.numero_telefono}" />
                <TextBlock x:Name="tblockErrorTelefono" Text="" FontWeight="SemiBold" Margin="0,0,0,10" FontSize="12" Foreground="Red"/>
                <TextBlock Text="{lex:Loc Resources.contrasena}" FontWeight="SemiBold" FontSize="18"/>
                <TextBox x:Name="tbPassword" Padding="10" Tag="{lex:Loc Resources.contrasena}" />
                <TextBlock x:Name="tblockErrorPassword" Text="" FontWeight="SemiBold" FontSize="12" Foreground="Red"/>
                <Image x:Name="imgPerfil" Width="80" Height="80"/>
                <Button Content="{lex:Loc Resources.elegir_foto}" Width="150" Margin="0,5,0,0" Style="{StaticResource EstiloBotonPrincipalSinIcono}" Click="BtnElegirFoto_Click"/>
            </StackPanel>
            <!-- Botones -->
            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,10">
                <Button Content="{lex:Loc Resources.registrarme}" Width="151" Margin="10,0" Style="{StaticResource EstiloBotonPrincipalSinIcono}" Click="BtnRegistrarme_Click"/>
                <Button Content="{lex:Loc Resources.cancelar}" Width="151" Margin="10,0" Style="{StaticResource EstiloBotonSecundarioSinIcono}" Click="BtnCancelar_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
