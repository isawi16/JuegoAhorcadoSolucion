<UserControl x:Class="ClienteAhorcado.Vistas.ConsultarHistorialPartidasUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300" Height="400">
    <StackPanel Margin="20">
        <DataGrid Name="dgHistorial" Width="250" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" />
                <DataGridTextColumn Header="Palabra Jugada" Binding="{Binding Palabra}" />
                <DataGridTextColumn Header="Resultado" Binding="{Binding Resultado}" />
                <DataGridTextColumn Header="Rival" Binding="{Binding Rival}" />
                <DataGridTextColumn Header="Puntaje" Binding="{Binding Puntaje}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Volver" Width="250" Margin="5"/>
    </StackPanel>
</UserControl>

