<UserControl x:Class="ClienteAhorcado.Vistas.ConsultarHistorialPartidasUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="394" Width="609"
             >
    <Border Background="White" CornerRadius="12" Margin="10,10,0,0">
        <StackPanel Margin="20">
            <TextBlock x:Name="tblockTitulo" Text="Historial de Partidas" FontSize="15" FontWeight="Bold" Margin="0,0,0,1" HorizontalAlignment="Center"/>
            <DataGrid Name="dgHistorial" Margin="5" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="colFecha" Header="Fecha" Binding="{Binding Fecha}" Width="*" />
                    <DataGridTextColumn x:Name="colPalabra" Header="Palabra Jugada" Binding="{Binding PalabraTexto}"  Width="*" />
                    <DataGridTextColumn x:Name="colGanador" Header="Ganador" Binding="{Binding GanadorNombre}"  Width="*" />
                    <DataGridTextColumn x:Name="colRival" Header="Rival" Binding="{Binding RivalNombre}"  Width="*" />
                    <DataGridTextColumn x:Name="colPuntaje" Header="Puntaje" Binding="{Binding Puntaje}"  Width="*" />
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="btnVolver" Content="Volver" Width="100" Margin="5" HorizontalAlignment="Right" Click="BtnVolver_Click"/>
        </StackPanel>
    </Border>
</UserControl>

