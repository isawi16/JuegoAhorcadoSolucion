<UserControl x:Class="ClienteAhorcado.Vistas.MarcadoresUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClienteAhorcado.Vistas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="White" CornerRadius="12" Margin="10">
        <Grid>
            <DataGrid x:Name="dgMarcadores" AutoGenerateColumns="False" IsReadOnly="True" Margin="20,58,20,42"
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MaxWidth="600">
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="colPuesto" Header="{lex:Loc Resources.puesto}" Binding="{Binding Puesto}" Width="0.6*"/>
                    <DataGridTextColumn x:Name="colNombre" Header="{lex:Loc Resources.nombre}" Binding="{Binding Nombre}" Width="4.5*"/>
                    <DataGridTextColumn x:Name="colPuntaje" Header="{lex:Loc Resources.puntaje}" Binding="{Binding PuntajeGlobal}" Width="1.2*"/>
                </DataGrid.Columns>
            </DataGrid>
            <TextBlock x:Name="tblockTitulo" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="{lex:Loc Resources.marcadores}" FontSize="25" FontWeight="Bold" Foreground="#2C3E50" VerticalAlignment="Top"/>
            <Button x:Name="btnRegresar" Content="{lex:Loc Resources.regresar}" HorizontalAlignment="Left" Margin="665,389,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.174,0.814" Width="93" Height="31" Style="{StaticResource EstiloBotonSecundarioSinIcono}" Click="BtnRegresar_Click"/>
        </Grid>
    </Border>
</UserControl>
