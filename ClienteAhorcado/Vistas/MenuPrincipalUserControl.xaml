<UserControl x:Class="ClienteAhorcado.Vistas.MenuPrincipalUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="600" Width="900">

    <UserControl.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" Color="Black" Opacity="0.3" BlurRadius="10" Direction="270" ShadowDepth="3" />
    </UserControl.Resources>

    <Border Background="Transparent" CornerRadius="15" Padding="20">
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="/Images/pinzarron.jpeg" Stretch="UniformToFill" />
            </Grid.Background>
            <Rectangle Fill="#AA000000" />

            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Center" >
                    <Border Width="140" Height="140" CornerRadius="12" Margin="0,20"
                        BorderBrush="#FF70A1FF" BorderThickness="3" 
                        Effect="{StaticResource DropShadowEffect}" ClipToBounds="True">
                        <Button x:Name="btnPerfil" Click="BtnPerfil_Click" Width="130" Height="130" Background="Transparent" HorizontalAlignment="Center">
                            <Image x:Name="imagenPerfil" Stretch="UniformToFill" />
                        </Button>
                    </Border>

                    

                    <TextBlock x:Name="tblNombre" Foreground="White" FontWeight="Bold" FontSize="18" TextAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap"/>
                    <TextBlock x:Name="tblCorreo" Foreground="White" FontSize="14" Opacity="0.8" TextAlignment="Center" TextWrapping="Wrap" />

                    <Button x:Name="btnCerrarSesion" Click="BtnCerrarSesion_Click" Background="Transparent" BorderThickness="0" Margin="0,40,0,0" Cursor="Hand" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                            <Image Source="/Images/cerrarSesion.png" Width="24" Height="24" Margin="0,0,10,0" />
                            <TextBlock x:Name="tblockCerrarSesion" Text="Cerrar sesión" Foreground="#FF70A1FF" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="520" >
                    <TextBlock x:Name="tblockVamosJugar" Text="¡Vamos a jugar!" FontSize="42" FontWeight="Bold" Foreground="White" Margin="0,0,0,10" FontFamily="Segoe UI Semibold" TextAlignment="Center" />
                    <TextBlock x:Name="tblockTitulo" Text="Ahorcado" FontSize="70" FontWeight="ExtraBold" Foreground="#FF70A1FF" Margin="0,0,0,30" TextAlignment="Center" />

                    <Image Source="/Images/logo ahorcado.png" Height="140" Width="140" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                        <Button x:Name="btnCrearPartida" Content="Crear Partida" Width="150" Height="50" Click="BtnCrearPartida_Click" Style="{StaticResource EstiloBotonPrincipalSinIcono}" Margin="0,0,40,0"/>
                        <Button x:Name="btnUnirsePartida" Content="Unirse a partida" Width="150" Height="50" Click="BtnUnirsePartida_Click" Style="{StaticResource EstiloBotonPrincipalSinIcono}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,40,0,0">
                        <Button x:Name="btnMarcadores" Content="Marcadores" Width="130" Height="40" Click="BtnMarcadores_Click" Style="{StaticResource EstiloBotonSecundarioSinIcono}" Margin="0,0,40,0"/>
                        <Button x:Name="btnHistorialPartidas" Content="Historial de partidas" Width="160" Height="40" Click="BtnHistorialPartidas_Click" Style="{StaticResource EstiloBotonSecundarioSinIcono}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
