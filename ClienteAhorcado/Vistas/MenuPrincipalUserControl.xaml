            <Button Content="Marcadores" HorizontalAlignment="Center" Margin="0,348,0,0" VerticalAlignment="Top" Height="29" Width="130" Click="BtnMarcadores_Click" Style="{StaticResource EstiloBotonSecundarioSinIcono}"/>
            <Button Content="Historial de partidas" HorizontalAlignment="Left" Margin="663,38,0,0" VerticalAlignment="Top" Height="33" Width="140" Click="BtnHistorialPartidas_Click" Style="{StaticResource EstiloBotonSecundarioSinIcono}"/>
            <TextBlock x:Name="tblNombre" HorizontalAlignment="Left" Margin="116,31,0,0" TextWrapping="Wrap" Text="nombre" VerticalAlignment="Top" FontSize="18" />
            <TextBlock x:Name="tblCorreo" HorizontalAlignment="Left" Margin="116,65,0,0" TextWrapping="Wrap" Text="correo" VerticalAlignment="Top" FontSize="18"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="55" Height="79" Width="252" FontWeight="Bold"><Run Language="es-mx" Text="Ahorcado"/></TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="212,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="30"><Run Language="es-mx" Text="Vamos a jugar"/></TextBlock>
            <TextBlock HorizontalAlignment="Left" Margin="507,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="30"><Run Language="es-mx" Text="¿Adivinas?"/></TextBlock>

        </Grid>
    </Border>
</UserControl>
