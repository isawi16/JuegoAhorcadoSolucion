<UserControl x:Class="ClienteAhorcado.Vistas.MenuPrincipalUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClienteAhorcado.Vistas"
             mc:Ignorable="d" Height="496" Width="871">
    <Border Background="White" CornerRadius="12" Margin="10">
        <Grid>
            <Button Content="Perfil" HorizontalAlignment="Left" Margin="35,29,0,0" VerticalAlignment="Top" Height="60" Width="60" Click="BtnPerfil_Click" Style="{StaticResource EstiloBotonPrincipalSinIcono}"/>
