<UserControl x:Class="ClienteAhorcado.Vistas.ConsultarPartidasDisponiblesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             Width="650" Height="400">
    <Grid>
        <Image Source="/Images/salon.jpg" Stretch="UniformToFill" Panel.ZIndex="0"/>
        <Border  CornerRadius="12" Margin="32,22,48,10" Panel.ZIndex="1" Opacity="0.95">
            <StackPanel Margin="10">
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF026B09"/>
                        <GradientStop Color="#FF031905" Offset="1"/>
                    </LinearGradientBrush>
                </StackPanel.Background>
                <DataGrid Name="dgPartidas" Width="550" Margin="5" Height="251"
                          AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn x:Name="colIDPertida" Header="{lex:Loc Resources.id_partida}" Binding="{Binding IDPartida}" Width="100"/>
                        <DataGridTextColumn x:Name="colCategoria" Header="{lex:Loc Resources.categoria}" Binding="{Binding CategoriaNombre}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button x:Name="btnUnirsePartida" Content="{lex:Loc Resources.unirse_partida}" Width="250" Margin="5" Click="UnirsePartida_Click"/>
                <Button x:Name="btnActualizarLista" Content="{lex:Loc Resources.actualizar_lista}" Width="250" Margin="5" Click="ActualizarLista_Click"/>
                <Button x:Name="btnRegresar" Content="{lex:Loc Resources.regresar}" Width="100" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="CerrarButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
