<UserControl x:Class="ClienteAhorcado.Vistas.ConsultarPartidasDisponiblesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300" Height="400">
    <StackPanel Margin="20">
        <DataGrid Name="dgPartidas" Width="250" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Creador" Binding="{Binding Creador}" />
                <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" />
                <DataGridTextColumn Header="Fecha de Creación" Binding="{Binding FechaCreacion}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Unirse a Partida" Width="250" Margin="5"/>
        <Button Content="Actualizar lista" Width="250" Margin="5"/>
    </StackPanel>
</UserControl>
