<UserControl x:Class="ClienteAhorcado.Vistas.ConsultarPartidasDisponiblesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="650" Height="400">
    <Border Background="White" CornerRadius="12" Margin="10">
        <StackPanel Margin="20">
            <DataGrid Name="dgPartidas" Width="550" Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Creador" Binding="{Binding Creador}" Width="*" /> <!-- el creador contiene nombre y correo -->
                    <DataGridTextColumn Header="Fecha de Creación" Binding="{Binding FechaCreacion}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Unirse a Partida" Width="250" Margin="5"/>
            <Button Content="Actualizar lista" Width="250" Margin="5"/>
        </StackPanel>
    </Border>
</UserControl>
