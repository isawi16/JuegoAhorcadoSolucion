<UserControl x:Class="ClienteAhorcado.Vistas.ConsultarPartidasDisponiblesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="650" Height="400">



    <Grid>
        <!-- Fondo con la imagen -->
        <Image Source="/Images/salon.jpg" Stretch="UniformToFill" Panel.ZIndex="0"/>

        <!-- Contenido principal sobre el fondo -->
        <Border  CornerRadius="12" Margin="32,22,48,10" Panel.ZIndex="1" Opacity="0.95">
            <StackPanel Margin="10">
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF026B09"/>
                        <GradientStop Color="#FF031905" Offset="1"/>
                    </LinearGradientBrush>
                </StackPanel.Background>
                <DataGrid Name="dgPartidas" Width="550" Margin="5" Height="251"
                          AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID Partida" Binding="{Binding IDPartida}" Width="100"/>
                        <DataGridTextColumn Header="Categoría" Binding="{Binding CategoriaNombre}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Button Content="Unirse a Partida" Width="250" Margin="5" Click="UnirsePartida_Click"/>
                <Button Content="Actualizar lista" Width="250" Margin="5" Click="ActualizarLista_Click"/>
                <Button Content="Cerrar" Width="100" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="CerrarButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
