<UserControl x:Class="ClienteAhorcado.Vistas.JuegoAhorcadoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="600" Height="400">
    <Grid>
        <!-- Fila superior para mostrar la imagen del ahorcado -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Espacio para la imagen de intentos restantes -->
        <Image Name="imgAhorcado" Width="100" Height="100" Grid.Row="0" Margin="10"/>

        <!-- Espacio para mostrar la palabra con guiones -->
        <StackPanel Name="stackPalabra" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <!-- Los guiones bajos se generarán dinámicamente aquí -->
        </StackPanel>

        <!-- Fila para los botones de las letras -->
        <WrapPanel Grid.Row="2" Margin="10" HorizontalAlignment="Center" Name="WrapPanel">
            <!-- Los botones de letras se generarán dinámicamente aquí -->
        </WrapPanel>


        <!-- Espacio para el chat -->
        <TextBox Name="txtMensaje" Width="200" Height="30" VerticalAlignment="Bottom" Margin="10">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text.Length, ElementName=txtMensaje}" Value="0">
                            <Setter Property="Text" Value="Escribe un mensaje..."/>
                            <Setter Property="Foreground" Value="Gray"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>
        <Button Name="btnEnviar" Content="Enviar" Width="80" Height="30" VerticalAlignment="Bottom" Margin="10" Click="EnviarMensaje"/>
        <ListBox Name="lstChat" Width="200" Height="100" VerticalAlignment="Bottom" Margin="10"/>
    </Grid>
</UserControl>