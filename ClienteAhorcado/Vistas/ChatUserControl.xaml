<UserControl x:Class="ClienteAhorcado.Vistas.ChatUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300" Height="400">
    <StackPanel Margin="20">
        <!-- Placeholder con WatermarkTextBox -->
        <TextBox Name="txtMensaje" Width="200" Height="30" VerticalAlignment="Bottom" Margin="10">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Style.Triggers>
                        <!-- Si el TextBox está vacío, mostramos el texto de Watermark -->
                        <DataTrigger Binding="{Binding Text.Length, ElementName=txtMensaje}" Value="0">
                            <Setter Property="Foreground" Value="Gray"/>
                            <Setter Property="Text" Value="Escribe un mensaje..."/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <Button Content="Enviar" Width="250" Margin="5" Click="EnviarMensaje"/>
        <ListBox Name="lstMensajes" Width="250" Margin="5">
            <!-- Lista de mensajes -->
        </ListBox>
    </StackPanel>
</UserControl>
