<UserControl x:Class="ClienteAhorcado.Vistas.SeleccionCategoriaIdiomaUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300" Height="400">
    <StackPanel Margin="20">
        <ComboBox Name="cbIdioma" Width="250" Margin="5">
            <ComboBoxItem Content="Español"/>
            <ComboBoxItem Content="Inglés"/>
        </ComboBox>
        <ListBox Name="lstCategorias" Width="250" Margin="5">
            <ListBoxItem Content="Animales"/>
            <ListBoxItem Content="Frutas"/>
        </ListBox>
        <Button Content="Crear Partida" Width="250" Margin="5"/>
    </StackPanel>
</UserControl>

