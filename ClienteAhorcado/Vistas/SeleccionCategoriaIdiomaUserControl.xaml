<UserControl x:Class="ClienteAhorcado.Vistas.SeleccionCategoriaIdiomaUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="400" MinHeight="400" Height="442">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Idiomas -->
        <ComboBox x:Name="cbIdioma"
                  Margin="0,0,0,10"
                  SelectionChanged="cbIdioma_SelectionChanged"
                  DisplayMemberPath="Nombre"
                  HorizontalAlignment="Stretch"
                  Grid.Row="0"/>

        <!-- Categorías -->
        <ListBox x:Name="lstCategorias"
                 Margin="0,0,0,10"
                 DisplayMemberPath="Nombre"
                 SelectionChanged="lstCategorias_SelectionChanged"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 Grid.Row="1"/>

        <!-- Palabras con columna de dificultad -->
        <ListView x:Name="lstPalabras"
                  Margin="0,0,0,10"
                  SelectionChanged="lstPalabras_SelectionChanged"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Grid.Row="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn x:Name="colPalabra" Header="Palabra" DisplayMemberBinding="{Binding Texto}" Width="200"/>
                    <GridViewColumn x:Name="colDificultad" Header="Dificultad" DisplayMemberBinding="{Binding Dificultad}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Botones -->
        <Button x:Name="btnCrearPartida"
                Content="Crear Partida"
                Margin="0"
                IsEnabled="False"
                Click="btnCrearPartida_Click"
                HorizontalAlignment="Stretch"
                Grid.Row="3"/>

        <Button x:Name="btnRegresar"
            Content="Regresar"
            Margin="10"
            Click="btnRegresar_Click"
            HorizontalAlignment="Stretch"
            Grid.Row="4"/>
    </Grid>
</UserControl>
