<UserControl x:Class="ClienteAhorcado.Vistas.SeleccionCategoriaIdiomaUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="320" Height="500">

    <Grid Margin="20">
        <!-- 0-Combo  1-Categorías  2-Palabras  3-Botón -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Idiomas -->
        <ComboBox x:Name="cbIdioma" Width="250" Margin="5"
                  SelectionChanged="cbIdioma_SelectionChanged"
                  DisplayMemberPath="Nombre"
                  Grid.Row="0">
        </ComboBox>

        <!-- Categorías -->
        <ListBox x:Name="lstCategorias" Width="250" Margin="5"
                 DisplayMemberPath="Nombre"
                 SelectionChanged="lstCategorias_SelectionChanged"
                 Grid.Row="1"/>

        <!-- Palabras con columna de dificultad -->
        <ListView x:Name="lstPalabras" Margin="5"
                  SelectionChanged="lstPalabras_SelectionChanged"
                  Grid.Row="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Palabra"    DisplayMemberBinding="{Binding Texto}"      Width="150"/>
                    <GridViewColumn Header="Dificultad" DisplayMemberBinding="{Binding Dificultad}" Width="80"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Botón -->
        <Button x:Name="btnCrearPartida" Content="Crear Partida"
                Width="250" Margin="5"
                IsEnabled="False"
                Click="btnCrearPartida_Click"
                Grid.Row="3"/>
    </Grid>
</UserControl>
