<UserControl x:Class="ClienteAhorcado.Vistas.SeleccionCategoriaIdiomaUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             MinWidth="500" MinHeight="500" Background="#FFF">
    <Border CornerRadius="12" Padding="20" Background="#FAFAFA">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="tblockTitulo" Text="{lex:Loc Resources.selecciona_idioma_categoria}"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#333"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"
                       Grid.Row="0" />
            <!-- Idioma -->
            <ComboBox x:Name="cbIdioma"
                      Grid.Row="1"
                      Margin="0,0,0,15"
                      Height="35"
                      FontSize="14"
                      DisplayMemberPath="Nombre"
                      SelectionChanged="cbIdioma_SelectionChanged"
                      BorderBrush="#70A1FF"
                      Background="White"
                      Foreground="#333"/>
            <!-- Categorías -->
            <ListBox x:Name="lstCategorias"
                     Grid.Row="1"
                     Margin="-10,50,10,185"
                     DisplayMemberPath="Nombre"
                     SelectionChanged="lstCategorias_SelectionChanged"
                     Background="White"
                     BorderBrush="#DDD"
                     Foreground="#333"
                     FontSize="14"
                     Height="100" Grid.RowSpan="2"/>
            <!-- Palabras -->
            <ListView x:Name="lstPalabras"
                      Grid.Row="2"
                      Margin="0,120,0,15"
                      SelectionChanged="lstPalabras_SelectionChanged"
                      Background="White"
                      BorderBrush="#DDD"
                      Foreground="#333"
                      FontSize="14"
                      Height="150">
                <ListView.View>
                    <GridView>
                        <GridViewColumn x:Name="colPalabra" Header="{lex:Loc Resources.palabra}" DisplayMemberBinding="{Binding Texto}" Width="200"/>
                        <GridViewColumn Header="{lex:Loc Resources.dificultad}" DisplayMemberBinding="{Binding Dificultad}" Width="120"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <!-- Botón Crear -->
            <Button x:Name="btnCrearPartida"
                    Content="{lex:Loc Resources.crear_partida}"
                    Grid.Row="3"
                    Height="40"
                    FontWeight="Bold"
                    Background="#70A1FF"
                    Foreground="White"
                    BorderThickness="0"
                    IsEnabled="False"
                    Click="btnCrearPartida_Click"/>
            <!-- Botón Regresar -->
            <Button x:Name="btnRegresar"
                    Content="{lex:Loc Resources.regresar}"
                    Grid.Row="4"
                    Margin="0,10,0,0"
                    Height="35"
                    Background="Transparent"
                    Foreground="#70A1FF"
                    BorderBrush="#70A1FF"
                    BorderThickness="1.2"
                    FontWeight="SemiBold"
                    Click="btnRegresar_Click"/>
        </Grid>
    </Border>
</UserControl>
