<UserControl x:Class="ClienteAhorcado.Vistas.IniciarSesionUserControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="461" Width="380"
        Background="#f0f2f5">
    <Border Background="White" CornerRadius="12" Margin="20" >
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Encabezado -->
            <StackPanel Grid.Row="0" Margin="0,10,0,20" HorizontalAlignment="Center">
                <TextBlock Text="Bienvenido" FontSize="24" FontWeight="Bold" Foreground="#2C3E50" TextAlignment="Center"/>
                <TextBlock Text="Inicia sesión para continuar" FontSize="14" Foreground="Gray" TextAlignment="Center"/>
            </StackPanel>

            <!-- Contenido -->
            <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Width="280">
                <TextBlock Text="Correo electrónico" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="tbCorreo" Height="35" Padding="10,5,10,10" 
                         Tag="Correo electrónico" Margin="0,0,0,5" />
                <TextBlock x:Name="tblockErrorCorreo" Text="" Margin="0,0,0,5" Foreground="Red"/>

                <TextBlock Text="Contraseña" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <Grid>
                    <PasswordBox x:Name="pbPassword" Height="35" Padding="10" 
                             Tag="Contraseña" Margin="0,0,40,5" Visibility="Visible" PasswordChanged="pbPassword_PasswordChanged"/>
                    <TextBox x:Name="tbPasswordVisible" Height="35" Margin="0,0,40,5" Padding="10,5,10,10"
                             Tag="Contraseña" VerticalAlignment="Center" Visibility="Collapsed" TextChanged="tbPasswordVisible_TextChanged"/>

                    <Button x:Name="btnVerPassword" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Click="btnVerPassword_Click" Content="👁"/>
                </Grid>

                <TextBlock x:Name="tblockErrorPassword" Text="" Margin="0,0,0,5" Foreground="Red" VerticalAlignment="Bottom"/>
                <Button Content="Iniciar Sesión"
                        Click="btnIniciarSesion_Click"
                        Style="{StaticResource EstiloBotonPrincipalSinIcono}"
                        Height="40" Margin="0,0,0,10"/>

                <Button Content="¿No tienes cuenta? Regístrate"
                        Click="btnRegistrarse_Click"
                        Style="{StaticResource EstiloBotonSecundarioSinIcono}"
                        Height="40" Background="Transparent" BorderBrush="#3498db" Foreground="#3498db"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
